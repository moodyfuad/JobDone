        function updateName() {
            var username = document.getElementById("inputUsername").value;
            //alert(username);
            
            $.ajax(
                {
                    url: "/AdminManageSellers/_GetSellers" ,
                    type:"GET",
                    data: { username : username }, 
                    
                    

                    success: function (result){
                        console.log("passed");
