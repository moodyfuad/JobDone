@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@model List<CustomerOrdersViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">


    <title>shopping cart with selected products order summary and checkout button - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Customer/stylee.css">
    <style type="text/css">
        body {
            margin-top: 20px;
            background-color: #f1f3f7;
        }

        .avatar-lg {
            height: 5rem;
            width: 5rem;
        }

        .font-size-18 {
            font-size: 18px !important;
        }

        .text-truncate {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        a {
            text-decoration: none !important;
        }

        .w-xl {
            min-width: 160px;
        }

        .card {
            margin-bottom: 24px;
            -webkit-box-shadow: 0 2px 3px #e4e8f0;
            box-shadow: 0 2px 3px #e4e8f0;
        }

        .card {
            position: relative;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-box-direction: normal;
            -ms-flex-direction: column;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 1px solid #eff0f2;
            border-radius: 1rem;
        }

        .rating {
            unicode-bidi: bidi-override;
            direction: rtl;
            text-align: center;
        }

        .rating > span {
            display: inline-block;
            position: relative;
            width: 1.1em;
            color: gold;
        }

        .rating > span:hover:before,
        .rating > span:hover ~ span:before {
            content: "\2605";
            position: absolute;
            color: gold;
        }

        .get-started-btn {
            color: black;
            border-radius: 4px;
            padding: 7px 25px 8px 25px;
            white-space: nowrap;
            transition: 0.3s;
            font-size: 14px;
            display: inline-block;
            border: 2px solid #ffc451;
        }

            .get-started-btn:hover {
                background: #ffbb38;
                color: #343a40;
            }

        @@media (max-width: 992px) {
            .get-started-btn {
                padding: 7px 20px 8px 20px;
                margin-right: 15px;
            }
        }

    </style>
</head>
<body>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <div class="container" style="margin-top:120px;">
        <div class="row">
            <div class="col-xl-8">
                @{
                    if (Model != null && Model.Count != 0)
                    {
                        foreach (var order in Model)
                        {
                            <div class="card border shadow-none">
                                <div class="card-body">
                                    <div class="d-flex align-items-start border-bottom pb-3">
                                        <div class="me-4">
                                            <a href="/CustomerVisitSellerProfile/Profile?sellerId=@order.SellerId" class="text-dark"><img src="data:image/jpeg;base64,@order.SellerPicture" alt="Image" class="avatar-lg rounded; rounded-circle"></a>
                                        </div>
                                        <div class="flex-grow-1 align-self-center overflow-hidden">
                                            <div>
                                                <div style ="display:flex; flex-direction:row; justify-content:center; align-items:start">
                                                    <h2 class="text-truncate font-size-40">
                                                        <a href="/CustomerVisitSellerProfile/Profile?sellerId=@order.SellerId" class="text-dark">@order.SellerName</a>
                                                    </h2>
                                                    <h5 style="margin-left:auto; color:black; font-size:x-large" class="mb-0 mt-1">Project Name : 
                                                        <span class="fw-medium">@order.ProjectName</span> <br />
                                                    </h5>
                                                   
                                                </div>
                                               <div style="display:flex;justify-content:space-between">
                                                    <div style="display:inline-block; max-width:70%">
                                                        <h2 class="text-truncate font-size-18"><a href="/CustomerVisitSellerProfile/Profile?sellerId=@order.SellerId" style="color:gray">@@@order.SellerName</a></h2>
                                                        <div>
                                                            <span>@order.Rate</span>
                                                            <span>&#9733;</span>

                                                        </div>
                                                        <h5 class="mb-0 mt-1">Order description : <h6 class="fw-medium" style="font-size:small">@order.OrderDescription</h6></h5>
                                                        <br />
                                                    </div>
                                                    @{
                                                        <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; color: green; text-align: center;">
                                                            @if (order.OrderStatus == "SellerCompleted")
                                                            {
                                                                <h6>Your order is completed.</h6>
                                                                <h6>Please Press 'Complete' to Agree,</h6>
                                                                <h6>that the order is</h6>
                                                                <h6> Completed Successfully</h6>

                                                            }
                                                            else if (order.OrderStatus == "Working")
                                                            {
                                                                <h6>The service Provider is.</h6>
                                                                <h6>working in your order ,</h6>
                                                                <h6>Please wait</h6>
                                                            }
                                                            else
                                                            {
                                                                <h6>Your order is Done.</h6>
                                                                <h6>With JobDone!</h6>
                                                            }
                                                        </div>
                                                    }
                                               
                                               </div>
                                                @{
                                                    if (order.OrderStatus == "SellerCompleted")
                                                    {
                                                        <form method="post" asp-action="OrderCompleted" asp-route-id="@order.orderId">
                                                            <button type="submit" class="get-started-btn" style="float:right; background-color:#ffbb38" onmouseover="this.style.backgroundColor='#FFA500';" onmouseout="this.style.backgroundColor='#ffbb38';">Completed</button>
                                                        </form>
                                                    }
                                                    else if (order.OrderStatus == "Working")
                                                    {
                                                        <button disabled class="get-started-btn" style="float:right; border: 2px solid gray; background-color:gray">Completed</button>
                                                    }
                                                    else
                                                    {
                                                        <button disabled class="get-started-btn" style="float:right;border: 2px solid gray;background-color:gray">@order.OrderStatus</button>
                                                    }

                                                    <form asp-controller="CustomerOrder" asp-action="Chat" method="get" style="display:contents;">
                                                       
                                                        <input type="hidden" name="sellerId" value="@order.SellerId" />
                                                        <input type="hidden" name="customerId" value="@order.CustomerId" />
                                                        <button type="submit" class="get-started-btn" style="float:right;margin-right:12px">message</button>
                                                    </form>
                                                }
                                            </div>
                                        </div>


                                    </div>
                                    <div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="mt-3">
                                                    <p class="text-muted mb-2">Payment amount</p>
                                                    <h5 class="mb-0 mt-2"><span class="text-muted me-2"></span>$@order.Price.ToString("0.00")</h5>
                                                </div>
                                            </div>
                                            <div class="col-md-5">
                                                <div class="mt-3" style="margin-left:40px;">
                                                    <p class="text-muted mb-2">Order date</p>
                                                    <div class="d-inline-flex">
                                                        <h5>@order.OrderDate</h5>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="mt-3">
                                                    <p class="text-muted mb-2">Delivery date</p>
                                                    <h5>@order.DeliverDate</h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                }
                <div class="row my-4">
                    <div class="col-sm-6">
                        <a asp-controller="Customer" asp-action="Home" class="btn btn-link text-muted">
                            <i class="mdi mdi-arrow-left me-1"></i> Back to home
                        </a>
                    </div>
                    
                </div>
            </div>
            <div class="col-xl-4" >
                <div class="mt-5 mt-lg-0" style="position:sticky;top:100px">
                    <div class="card border shadow-none">
                        <div class="card-header bg-transparent border-bottom py-3 px-4">
                            <h5 class="font-size-16 mb-0">Order Summary </h5>
                        </div>
                        <div class="card-body p-4 pt-2">
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <tbody>
                                        <tr>
                                            <td>Total cost for services</td>
                                            <td class="text-end">$@ViewBag.TotalServicePrice</td>
                                        </tr>
                                        <tr>
                                            <td>Total website taxes </td>
                                            <td class="text-end">$@ViewBag.TotalTaxesPrice</td>
                                        </tr>
                                       
                                        <tr class="bg-light">
                                            <th>Total payment :</th>
                                            <td class="text-end">
                                                <span class="fw-bold">
                                                    $@ViewBag.TotalPayment
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </>

    </div>

    </script>
</body>
</html>