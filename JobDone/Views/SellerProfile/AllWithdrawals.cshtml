@{
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

@model SellerProfileViewModel


<div class="container" style="margin-top: 150px;">
    <h1 class="text-center" style="font-size: 50px;">All Withdrawals</h1>
    @if(Model.withdrawModelsList.Count() == 0)
    {
        <h3 class="text-center" style="color:red; margin-top: 200px; margin-bottom: 200px;">Nothing here</h3>
    }
    else
    {
        @foreach (var item in Model.withdrawModelsList)
        {
            <div class="row-lg-6">
                <div class="services-item bg-light border-4 border-start border-warning rounded p-4">
                    <div class="row align-items-center"> 
                        <div class="col-12">
                            <div class="services-content" style="text-align: left;">
                                <h2>Amount Of Money : </h2>
                                <h2>@Math.Round(item.AmountOfMoney,2)</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <br />
        }
    }
    
    
</div>