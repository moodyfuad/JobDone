@using System.Security.Claims
@model SellersServicesCategoriesViewModel

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    string CustomerId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<head>
    <style>
        .get-started-btn {
            color: black;
            border-radius: 4px;
            padding: 7px 25px 8px 25px;
            white-space: nowrap;
            transition: 0.3s;
            font-size: 14px;
            display: inline-block;
            border: 2px solid #ffc451;
        }

            .get-started-btn:hover {
                background: #ffbb38;
                color: #343a40;
            }

        @@media (max-width: 992px) {
            .get-started-btn {
                padding: 7px 20px 8px 20px;
                margin-right: 15px;
            }
        }

    </style>
</head>
<body>
<div class="container" style="margin-top:120px">
    

    <div class="row mb-4">
        <form class="d-flex" method="post" asp-action="Search">
            <div class="col-md-7">
                    <input name="search" class="form-control me-2 get-started-btn" type="search" placeholder="Search" aria-label="Search">
            </div>
            &nbsp;&nbsp;&nbsp;
            <div class="col-md-2">
                    <select class="get-started-btn" name="option" aria-label="Filter">
                    <option value="category">Category</option>
                    <option value="username">Username</option>
                    <option value="service">Service</option>
                </select>
            </div>
            &nbsp;
                <button class="get-started-btn" style="background-color:#ffbb38" onmouseover="this.style.backgroundColor='#FFA500';" onmouseout="this.style.backgroundColor='#ffbb38';" type="submit">
                <h7>
                    <i class="fas fa-search"></i> Search
                </h7>
            </button>
        </form>
        </div>
        <h1>Search Results</h1>
        <div class="row">
            @if(Model.Option == "service")
            {
                @foreach (var Seller in Model.Sellers)
                {
                    @foreach(var service in Model.Services)
                    {
                    @if (service.SellerIdFk == Seller.Id)
                    {
                        <div class="col-md-4" style="width:25%;">
                                <div class="card mb-4" style="height:410px;">
                                @{
                                    string base64Image = Convert.ToBase64String(Seller.ProfilePicture);
                                }
                                <div class="image-container d-flex align-items-center justify-content-center" style="margin-top:5px">
                                    <img src="data:image/jpeg;base64,@base64Image" alt="Profile Picture" class="rounded-circle" height="150" width="150">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@Seller.Username</h5>
                                    <div class="">
                                        <span>@Seller.Rate</span>
                                        <span>&#9733;</span>

                                    </div>
                                    @{
                                        List<string> services = Model.Services.Where(x => x.SellerIdFk == Seller.Id).Select(x => x.Name).ToList();
                                    }
                                    <spna>Services : </spna>
                                    @foreach (var Service in services)
                                    {
                                        <span>@Service, </span>
                                    }
                                    <br />
                                    <h5>@Seller.CategoryIdFkNavigation.Name</h5>
                                    <form asp-controller="CustomerOrder" asp-action="Chat" method="get">
                                        <input type="hidden" name="customerId" value="@CustomerId" />
                                        <input type="hidden" name="sellerId" value="@Seller.Id" />
                                            <button type="submit" class="get-started-btn" style="background-color:#ffbb38" onmouseover="this.style.backgroundColor='#FFA500';" onmouseout="this.style.backgroundColor='#ffbb38';">
                                            Message
                                        </button>
                                    </form>
                                    <form asp-controller="CustomerVisitSellerProfile" asp-action="Profile" method="get">
                                            <input type="hidden" name="sellerId" value="@Seller.Id" />
                                            <button type="submit" class="get-started-btn">Visit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    }
                }
            }
            else
            {
                @if (Model.Sellers.Count() == 0)
                {
                    <h3 style="color:red">Nothing here</h3>
                }
                @foreach (var Seller in Model.Sellers)
                {
                <div class="col-md-4" style="width:25%;">
                        <div class="card mb-4" style="height:410px;">
                            @{
                                string base64Image = Convert.ToBase64String(Seller.ProfilePicture);
                            }
                            <div class="image-container d-flex align-items-center justify-content-center" style="margin-top:5px">
                                <img src="data:image/jpeg;base64,@base64Image" alt="Profile Picture" class="rounded-circle" height="150" width="150">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@Seller.Username</h5>
                            <div class="rating">
                                <span>@Seller.Rate</span>
                                <span>&#9733;</span>

                            </div>
                                @{
                                    List<string> services = Model.Services.Where(x => x.SellerIdFk == Seller.Id).Select(x => x.Name).ToList();
                                }
                                <spna>Services : </spna>
                                @foreach (var service in services)
                                {
                                    <span>@service, </span>
                                }
                                <br />
                                <h5>@Seller.CategoryIdFkNavigation.Name</h5>
                            <form asp-controller="CustomerOrder" asp-action="Chat" method="get" style="display:contents">
                                <input type="hidden" name="customerId" value="@CustomerId" />
                                <input type="hidden" name="sellerId" value="@Seller.Id" />
                                    <button type="submit" class="get-started-btn" style="background-color:#ffbb38" onmouseover="this.style.backgroundColor='#FFA500';" onmouseout="this.style.backgroundColor='#ffbb38';">
                                        Message
                                        </button>
                            </form>
                            <form asp-controller="CustomerVisitSellerProfile" asp-action="Profile" method="get" style="display:contents">
                                <input type="hidden" name="sellerId" value="@Seller.Id" />
                                    <button type="submit" class="get-started-btn" >Visit</button>
                            </form>
                            </div>
                        </div>
                    </div>
                }
            }

            
        </div>
    </div>
    </div>
</body>