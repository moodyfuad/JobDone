@using System.Security.Claims
@using JobDone.Models.Seller

@{
    string username = User.Claims.FirstOrDefault(c => c.Type == "username").Value;
    string WalletAmount = /* User.Claims.FirstOrDefault(c => c.Type == "WalletAmount").Value */ "5000";
    // string ProfilePicture = User.Claims.FirstOrDefault(c => c.Type == "ProfilePicture").Value ;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobDone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobDone.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    </environment>

</head>
<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="SellerProfile" asp-action="Profile">
                    <img class="rounded-circle" src="~/Customer/Picture/صوره.jpg" alt="Alternate Text" style="width:50px; height:50px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link text-light pl-0" asp-area="" asp-controller="SellerProfile" asp-action="Profile">
                                <h5 style="color:gray; margin:0;padding-left:0">@@@username</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Seller" asp-action="Home"><h5>Home</h5></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Seller" asp-action="Order"><h5>Order</h5></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Seller" asp-action="RequestedWrok"><h5>RequestServices</h5></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="SellerOrder" asp-action="Messages">
                                <h5>
                                    <i class="fas fa-envelope"></i> Messages
                                </h5>
                            </a>
                        </li>
                    </ul>

                </div>
                <img src="~/Customer/Picture/pngwing.com.png" alt="Alternate Text" style="width:30px; height:27px;" />
                <span id="walletAmount" style="color:white;margin-left:10px;">
                    @WalletAmount
                </span>
                <script>
                    var originalWalletAmount = "@WalletAmount";
                    var walletAmountElement = document.getElementById("walletAmount");

                    var storedWalletAmount = localStorage.getItem("walletAmount");
                    if (storedWalletAmount) {
                        walletAmountElement.innerHTML = storedWalletAmount;
                    }

                    function toggleWalletAmount() {
                        if (walletAmountElement.innerHTML === "****") {
                            walletAmountElement.innerHTML = originalWalletAmount;
                            localStorage.setItem("walletAmount", originalWalletAmount);
                        } else {
                            walletAmountElement.innerHTML = "****";
                            localStorage.setItem("walletAmount", "****");
                        }
                    }
                </script>
                
                @{
                    if (ViewBag.username != null)
                    {
                        <h5 style="color:white;margin-left:70px">Hello : @ViewBag.username </h5>
                    }
                }
                <form method="get" asp-action="Logout" asp-controller="Seller" style="display:contents">
                    <button class="btn btn-danger btn-circle btn-fw" type="submit" style="width: 40px; height: 40px; margin-left:60px">
                        <i class="fas fa-sign-out-alt"></i>
                    </button>
                </form>
                <h5 style="color:white;margin-left:70px">Logo</h5>


            </div>
        </nav>
    </header>


    <div class="container-fluid" style="margin-top:29px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)



    <!-- FOOTER -->
    <footer class="container-fluid">
        <p class="float-end"><a href="#">Back to top</a></p>
        <p>Copyright to Jabdone <a href="~/PrivacyPolicy.html">Privacy</a> &middot; <a href="#">Terms</a></p>
    </footer>
</body>
</html>
