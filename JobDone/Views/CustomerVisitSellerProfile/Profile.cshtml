    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                @{
                                    string base64Image = Convert.ToBase64String(Model.Seller.ProfilePicture);
                                }
                                <img src="data:image/jpeg;base64,@base64Image" alt="Picture" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    @{
                                        short count = 0;
                                    }
                                    @for (short i = 0; i < Model.Seller.Rate; i++)
                                    {
                                        count++;
                                        <span class="star" style="color:gold">&#9733;</span>
                                    }
                                    @for (short i = 0; i < 5 - count; i++)
                                    {
                                        <span class="star" style="color:gold">&#9734;</span>
                                    }
                                    <h3>@Model.Seller.Username</h3>
                                    <h5 class="text-secondary mb-1">@Model.Seller.CategoryIdFkNavigation.Name</h5>
                                    @foreach (var service in Model.Services)
                                    {
                                        <span class="text-muted font-size-sm">@service.Name, </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                @{string FullName = Model.Seller.FirstName + " " + Model.Seller.LastName;}
                                <div class="col-sm-9 text-secondary">
                                    @FullName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Birth Date</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Seller.BirthDate
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <form asp-controller="CustomerOrder" asp-action="Chat" method="get">
                                    <input type="hidden" name="customerId" value="@Model.customerId" />
                                    <input type="hidden" name="sellerId" value="@Model.Seller.Id" />
                                        <button type="submit" class="btn btn-primary">
                                            Message
                                        </button>
                                </form>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <div class="col-md-12 text-center">
                    <h3>Old Works</h3>
                </div>
                @{
                    string image = Convert.ToBase64String(Model.Seller.ProfilePicture);
                }
                @foreach(var oldWork in Model.sellerOldWorks)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <img class="bd-placeholder-img card-img-top" aria-label="Placeholder: Thumbnail" src="data:image/jpeg;base64,@image" alt="old work picture" width="100%" height="225">
                            <div class="card-body">
                                <p class="card-text">@oldWork.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">@DateTime.Now</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>






