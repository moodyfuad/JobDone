@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    
}
@model RequestedWorkViewModel;
@if (User.Identity.IsAuthenticated && @User.FindFirst("username").Value != null)
{
    Model.username = User.Claims.Where(c => c.Type == "username").First().Value;
}
<head>
    <style>
        .get-started-btn {
            color: black;
            border-radius: 4px;
            padding: 7px 25px 8px 25px;
            white-space: nowrap;
            transition: 0.3s;
            font-size: 14px;
            display: inline-block;
            border: 2px solid #ffc451;
        }

            .get-started-btn:hover {
                background: #ffbb38;
                color: #343a40;
            }

        @@media (max-width: 992px) {
            .get-started-btn {
                padding: 7px 20px 8px 20px;
                margin-right: 15px;
            }
        }

    </style>
</head>
<body style="background-color:#f1f3f7">
    <div class="container" style="margin-top:50px">
        <div class="content-wrapper">
            <div class="page-header">
                <br /><br />
              <h3 class="page-title" style="margin-left:30px"> Request work </h3>
            </div>
            <div class="row">
              <div class="col-12 grid-margin stretch-card">
                <div class="card" style="margin-left:30px;margin-right:30px;margin-bottom:30px;margin-top:40px;">
                  <div class="card-body">
                    <h4 class="card-title">Basic form elements</h4>
                    <p class="card-description"> Basic form elements </p>
                    <form class="forms-sample" asp-controller="CustomerRequestWork" asp-action="RequestWork">
                        <input asp-for=username hidden />
                      <div class="form-group">
                        <label >Project name</label>
                        <input asp-for="OrderName" class="form-control" id="exampleInputName1" placeholder="Name">
                            <span asp-validation-for="OrderName" class="text-danger"></span>
                        
                      </div>
                       <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label>Order date</label>
                                    <div class="col-sm-9">
                                        <input asp-for="OrderDate" type="date" value="@DateOnly.FromDateTime(DateTime.Now).ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)" class="form-control" style="background-color:lightgray" disabled="true">
                                        <span asp-validation-for="OrderDate" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label>Delivery date</label>
                                    <div class="col-sm-9">
                                        <input asp-for="DeliverDate" type="date" value="@Model.DeliverDate.ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)" class="form-control">
                                        <span asp-validation-for="DeliverDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="exampleSelectGender">Category</label>
                            <select asp-for=CategoryIdKf class="form-control" id="exampleSelectGender">
                                <option value="" hidden>Select</option>
                                @foreach(CategoryModel category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryIdKf" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="exampleTextarea1">Description</label>
                            <textarea asp-for=Description class="form-control" id="exampleTextarea1" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>

                        </div>

                        <br />
                        <h4>Price <span style="display:inline; font-size:small">in USD</span> </h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="col-sm-9">
                                        <div style="display:flex">
                                            <input asp-for=Price type="number" value="" class="form-control" style="width:40%;" placeholder="Enter Price" >
                                            <span style="text-align:center;font-size:x-large;color:green;margin-left:3px">$</span>
                                        </div>
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br /><br />

                                <input type="submit" class="get-started-btn" value="Post" style="background-color:#ffbb38; width:90px; float:right" onmouseover="this.style.backgroundColor='#FFA500';" onmouseout="this.style.backgroundColor='#ffbb38';"></input>
                                
                                <button class="get-started-btn" style="float:right; margin-right:10px">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>
                <div class="card">
                </div>
              </div>
              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                 
                </div>
              </div>
              <div class="col-12">
                <div class="card">
                 
                </div>
              </div>
            </div>
        </div>
    </div>
</body>