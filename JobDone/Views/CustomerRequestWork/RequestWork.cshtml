<div class="content-wrapper" style="background-color:aliceblue">
            <div class="page-header">
                <br /><br />
              <h3 class="page-title"> Request work </h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a asp-controller="Customer" asp-action="Home">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Request work</li>
                </ol>
              </nav>
            </div>
            <div class="row">
              <div class="col-12 grid-margin stretch-card">
                <div class="card" style="margin-left:30px;margin-right:30px;margin-bottom:30px;margin-top:40px;">
                  <div class="card-body">
                    <h4 class="card-title">Basic form elements</h4>
                    <p class="card-description"> Basic form elements </p>
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputName1">Project name</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Name">
                      </div>
                       <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label>Order date</label>
                                    <div class="col-sm-9">
                                        <input type="date" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label>Delivery date</label>
                                    <div class="col-sm-9">
                                        <input type="date" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="exampleSelectGender">Category</label>
                            <select class="form-control" id="exampleSelectGender">
                                <option>Programmer</option>
                                <option>Designer</option>
                            </select>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="exampleTextarea1">Description</label>
                            <textarea class="form-control" id="exampleTextarea1" rows="4"></textarea>
                        </div>
                        <br />
                        <h4>Price range</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label >From</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" style="width:60%;" placeholder="Enter minimum amount">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label >To</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" style="width:60%;" placeholder="Enter maximum amount">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br /><br />

                        <input type="submit" class="btn btn-light" value="Post" style="background-color:cornflowerblue;width:90px;"></input>
                      <button class="btn btn-light">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>
                <div class="card">
                </div>
              </div>
