@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model AdminSellerWithdrawRequest



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">


    <title>shopping cart with selected products order summary and checkout button - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="Customer/stylee.css" rel="stylesheet">
    <style type="text/css">
        body {
            margin-top: 20px;
            background-color: #f1f3f7;
        }

        .avatar-lg {
            height: 5rem;
            width: 5rem;
        }

        .font-size-18 {
            font-size: 18px !important;
        }

        .text-truncate {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        a {
            text-decoration: none !important;
        }

        .w-xl {
            min-width: 160px;
        }

        .card {
            margin-bottom: 24px;
            -webkit-box-shadow: 0 2px 3px #e4e8f0;
            box-shadow: 0 2px 3px #e4e8f0;
        }

        .card {
            position: relative;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-box-direction: normal;
            -ms-flex-direction: column;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 1px solid #eff0f2;
            border-radius: 1rem;
        }

        .rating {
            unicode-bidi: bidi-override;
            direction: rtl;
            text-align: center;
        }

            .rating > span {
                display: inline-block;
                position: relative;
                width: 1.1em;
                color: gold;
            }

                .rating > span:hover:before,
                .rating > span:hover ~ span:before {
                    content: "\2605";
                    position: absolute;
                    color: gold;
                }
    </style>
</head>
<body>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <div class="container" style="margin-top:120px;">
        <div class="row">
            <div class="col-xl-8">
                @{
                    int count = Model.Count;
                    int delete = 10;
                }
                @foreach (var request in Model.Withdraws)
                {
                    @if(count < Model.TotalRequestToShow)
                    {
                        <div class="card border shadow-none">
                            <div class="card-body">
                                <div class="d-flex align-items-start border-bottom pb-3">
                                    @{
                                        string base64Image = Convert.ToBase64String(request.SellerIdFkNavigation.ProfilePicture);
                                    }
                                    <div class="me-4">
                                        <img src="data:image/jpeg;base64,@base64Image" alt="Admin" class="rounded-circle" width="150">
                                    </div>
                                    <div class="flex-grow-1 align-self-center overflow-hidden">
                                        <div>
                                            <div style="display:flex; flex-direction:row; justify-content:center; align-items:start">
                                            </div>
                                            <h2 class="text-truncate font-size-40">@request.SellerIdFkNavigation.Username</h2>
                                        </div>
                                    </div>
                                    <div class="me-4">
                                        <br />
                                        <form method="post" asp-action="Done">
                                            <input class="btn btn-primary" type="submit" value="Done" />
                                            <input class="btn btn-primary" name="id" value="@request.Id" hidden/>
                                        </form>
                                    </div>


                                </div>
                                <div>
                                    <div class="row">
                                        <div class="col-md-4" style="margin-left:100px;">
                                            <div class="mt-3">
                                                <p class="text-muted mb-2">Request date</p>
                                                <h5>2/2/2024</h5>
                                            </div>
                                        </div>

                                        <div class="col-md-4" style="margin-left:220px;">
                                            <div class="mt-3">
                                                <p class="text-muted mb-2">Amount of money</p>
                                                <h5 class="mb-0 mt-2"><span class="text-muted me-2"></span>$ @request.AmountOfMoney</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                    }
                    @if(Model.TotalRequest == Model.TotalRequestToShow)
                    {
                        count++;
                    }
                    @if (count == Model.TotalRequestToShow && Model.Option == "Next")
                    {
                        <button class="btn btn-primary" onclick="goBack()" style="float: left;">Go Back</button>

                        <script>
                            function goBack() {
                                history.go(-1); // Go back to the previous page
                            }
                        </script>
                    }
                    @if (Model.TotalRequest == Model.TotalRequestToShow)
                    {
                        count--;
                    }
                    if (count == Model.TotalRequestToShow)
                    {
                        <form method="post" asp-action="WithdrawRecords">
                            <div style="text-align: right;">
                                <input class="btn btn-primary" name="Option" type="submit" value="Next" />
                            </div>
                            @{
                                var withdrawModels = Model.Withdraws.ToList();
                                if (Model.TotalRequestToShow != Model.TotalRequest)
                                {
                                    withdrawModels = Model.Withdraws.Skip(delete).ToList();
                                }
                                else
                                {
                                    withdrawModels = Model.Withdraws.Skip(Model.Count).ToList();
                                }
                            }
                            @for (int i = 0; i < withdrawModels.Count(); i++)
                            {
                                <input type="hidden" name="withdraws[@i].Id" value="@withdrawModels[i].Id" />
                            }
                            <input type="hidden" name="TotalRequest" value="@Model.TotalRequest" />
                            <input type="hidden" name="TotalRequestToShow" value="@Model.TotalRequestToShow" />
                            <input type="hidden" name="Count" value="@count" />
                        </form>
                    }
                    count++;
                }
                <br />

                <div class="row my-4">
                    <div class="col-sm-6">
                        <a asp-controller="Admin" asp-action="Home" class="btn btn-link text-muted">
                            <i class="mdi mdi-arrow-left me-1"></i> Back to home
                        </a>
                    </div>

                </div>
            </div>
            <div class="col-xl-4">
                <div class="mt-5 mt-lg-0">
                    <div class="card border shadow-none">
                        <div class="card-header bg-transparent border-bottom py-3 px-4">
                            <h5 class="font-size-16 mb-0">Order Summary </h5>
                        </div>
                        <div class="card-body p-4 pt-2">
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <tbody>
                                        <tr class="bg-light">
                                            <th>Total Request :</th>
                                            <td class="text-end">
                                                <span class="fw-bold">
                                                    @Model.TotalRequest
                                                </span>
                                            </td>
                                        </tr>

                                        <tr class="bg-light">
                                            <th>Total website benifits :</th>
                                            <td class="text-end">
                                                <span class="fw-bold">
                                                    $ 200
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            </>

        </div>

        </script>
</body>
</html>
