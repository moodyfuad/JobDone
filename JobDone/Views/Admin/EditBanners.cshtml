@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 style="text-align:center;">Modify Banners</h1>


<div class="dropdown" style="margin-left:560px;margin-top:90px;">
    <button class="btn btn-secondary dropdown-toggle" style="width:300px;" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Choose the banner for
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1" style="width:300px;margin-top:200px;">
        <li><a class="dropdown-item" href="#">Seller</a></li>
        <li><a class="dropdown-item" href="#">Customer</a></li>
        <li><a class="dropdown-item" href="#">Admin</a></li>
    </ul>
</div>


<br /><br />
<div class="container-fluid carousel-header px-0">
    <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="~/Seller/img/banner1.jpg" style="width:100%; height:600px;" class="img-fluid" alt="Image">
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 900px;">
                        <h4 class="text-primary text-uppercase mb-3">
                            <h1 class="display-1 text-capitalize text-dark mb-3">
                                <p class="mx-md-5 fs-4 px-4 mb-5 text-dark">

                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Seller/img/banner2.jpg" style="width:100%;height:600px;" class="img-fluid" alt="Image">
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 900px;">
                        <h4 class="text-primary text-uppercase mb-3" style="letter-spacing: 3px;">
                            <h1 class="display-1 text-capitalize text-dark mb-3">
                                <p class="mx-md-5 fs-4 px-5 mb-5 text-dark">

                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Seller/img/banner3.jpg" style="width:100%;height:600px;" class="img-fluid" alt="Image">
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 900px;">
                        <h4 class="text-primary text-uppercase mb-3" style="letter-spacing: 3px;">
                            <h1 class="display-1 text-capitalize text-dark">
                                <p class="mx-md-5 fs-4 px-5 mb-5 text-dark">

                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


<button class="btn btn-secondary" style="width:150px; margin-left:645px;margin-top:30px;" type="button">
    Add New banner
</button>
